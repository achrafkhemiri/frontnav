{
  "name": "navire-frontend",
  "version": "1.0.0",
  "description": "Navire desktop application bundling Angular frontend and Spring Boot backend",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "ng build && electron .",
    "electron:build": "ng build && electron-builder"
  },
  "private": true,
  "main": "main.js",
  "dependencies": {
    "@angular/animations": "^16.2.12",
    "@angular/cdk": "^16.2.14",
    "@angular/common": "16.2.12",
    "@angular/compiler": "16.2.12",
    "@angular/core": "16.2.12",
    "@angular/forms": "16.2.12",
    "@angular/material": "^16.2.14",
    "@angular/platform-browser": "16.2.12",
    "@angular/platform-browser-dynamic": "16.2.12",
    "@angular/router": "16.2.12",
    "@fortawesome/fontawesome-free": "^7.0.1",
    "@nguniversal/express-engine": "16.2.0",
    "bootstrap": "^5.3.8",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "xlsx": "^0.18.5",
    "zone.js": "~0.13.0"
  },
  "author": "",
  "build": {
    "appId": "com.example.navire",
    "productName": "NavireApp",
    "files": [
      "dist/frontend/**/*",
      "main.js"
    ],
    "extraResources": [
      {
        "from": "..\\navire\\target\\navire-0.0.1-SNAPSHOT.jar",
        "to": "navire-0.0.1-SNAPSHOT.jar"
      }
    ],
    "directories": {
      "output": "out3",
      "buildResources": "build"
    },
    "asar": false,
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "NavireApp",
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "16.2.16",
    "@angular/cli": "16.2.16",
    "@angular/compiler-cli": "16.2.12",
    "@types/jasmine": "~4.3.0",
    "@types/node": "18.19.19",
    "@types/xlsx": "^0.0.36",
  "electron": "30.0.0",
    "@electron/remote": "^2.1.2",
    "electron-builder": "^24.6.0",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "5.1.6"
  }
}
